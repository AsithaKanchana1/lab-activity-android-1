<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_img2"
    android:gravity="center_vertical"
    tools:context=".MultiMediaActivity">

<!--    Media Player Logo Image -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:paddingTop="24dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">
    <ImageView
        android:id="@+id/playerLogo"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/music_logo" />
</LinearLayout>

<!--    Media Player Buttons -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/audioPlayButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/green"
        android:onClick="controlAudioPlayback"
        android:text="Play"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="350dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/audioPauseButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/lBlue"
        android:onClick="controlAudioPlayback"
        android:text="Pause"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="451dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/audioStopButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/orange"
        android:onClick="controlAudioPlayback"
        android:text="Stop"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="451dp" />
</LinearLayout>



</LinearLayout>